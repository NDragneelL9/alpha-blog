<%= render 'shared/error_messages', obj: @category %>
<%= form_with(model: @category, class: "shadow mb-5 p-3 bg-info rounded",local: true) do |f| %>

  <div class="mb-3">
    <%= f.label :name, "Category name", class: "fw-bold col-2 col-form-label" %>
    <div class="col-12">
      <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter category name" %>
    </div>
  </div>

  <div class="mb-3 text-center">
    <%= f.submit class: "btn btn-outline-dark btn-lg mt-4 ml-10" %>
  </div>

  <div class="text-center">
    <% if @category.name %>
      <%= link_to '[ Return ]', category_path(@category), class: "text-center text-dark" %>
    <% else %>
      <%= link_to '[ Return ]', categories_path, class: "text-center text-dark" %>
    <% end%>
  </div>
<% end %>