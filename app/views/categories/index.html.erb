<div class="container">
  <h1 class="text-center my-4">Categories</h1>

  <div class="flickr_pagination">
      <%= will_paginate @categories, :container => false %>
  </div>

  <% @categories.each do |category| %>
    <div class="row justify-content-md-center">
      <div class="col-5 mt-4">
        <div class="card text-center shadow mb-3 bg-body rounded">
          <div class="card-body">
            <h5 class="card-title mb-2">
              <%= link_to category.name, category_path(category), class: "link-success" %>
            </h5>
            <div class="card-text">
              <%= pluralize(category.articles.count, "artcile") %>
            </div>
            <% if logged_in? &&current_user.admin? %>
              <%= link_to "Delete", category_path(category), method: :delete, data: { confirm: "Are you sure to delete this category?" }, class: "btn btn-danger mt-2" %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small> Created <%= time_ago_in_words(category.created_at) %> ago,
            edited <%= time_ago_in_words(category.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
  </div>

</div>