<div class="container">
  <h1 class="text-center" style="margin-top: 20px; margin-bottom: 20px;">Our Bloggers</h1>

  <div class="flickr_pagination">
      <%= will_paginate @users, :container => false %>
  </div>

  <div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-6 mt-4">
        <div class="card text-center shadow mb-5 bg-body rounded">
          <div class="card-header fst-italic">
          <%= link_to user.username, user %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to gravatar_for(user, size: 120), user %></h5>
            <div class="card-text"><%= pluralize(user.articles.count, "article") %>
            </div>
            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
              <%= link_to "View profile", user, class: "btn btn-success"%>
            <% if logged_in? %>
              <% if user == current_user %>
                <%= link_to "Edit", edit_user_path(user), class: "btn btn-warning" %>
              <% end %>
              <% if current_user.admin? %>
                <%= link_to "Delete account", user_path(user), method: :delete, data: { confirm: "Are you sure to delete this account?" }, class: "btn btn-danger" %>
              <% end %>
            <% end %>
            </div>
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
  
    <div class="flickr_pagination">
      <%= will_paginate @users, :container => false %>
  </div>
</div>

