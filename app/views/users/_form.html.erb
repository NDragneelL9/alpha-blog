<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/error_messages', obj: @user %>
      <%= form_with(model: @user, class: "shadow mb-5 p-3 bg-info rounded",local: true) do |f| %>

        <div class="mb-3">
          <%= f.label :username, class: "fw-bold col-2 col-form-label" %>
          <div class="col-12">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter username" %>
          </div>
        </div>

        <div>
          <%= f.label :email, class: "fw-bold col-2 col-form-label" %>
          <div class="col-12">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter email address" %>
          </div>
        </div>

         <div>
          <%= f.label :password, class: "fw-bold col-2 col-form-label" %>
          <div class="col-12">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter password" %>
          </div>
        </div>

        <div class="mb-3 text-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account info", class: "btn btn-outline-dark btn-lg mt-4 ml-10") %>
        </div>

        <div class="text-center">
          <%= link_to '[ Return ]', articles_path, class: "text-center text-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
